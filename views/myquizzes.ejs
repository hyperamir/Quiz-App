<!DOCTYPE html>
<html>

<head>

</head>

<body>
  <%- include('partials/_header') %>


    <h2> Quizzes Taken </h2>



    <form action="/create" method="POST">

      <% for (const result of results) { %>

        <table class="table">
          <thead>
            <tr>
              <th scope="col">Quiz Name</th>
              <th scope="col">Your Score</th>
            </tr>
          </thead>
          <tbody>

            <tr>
              <td>
                <%= result.name %>
              </td>
              <td>
                <%= result.correct %> / 5
              </td>
            </tr>

          </tbody>
        </table>

        <% } %>
    </form>

</body>

</html>
